{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cart/cart/data-access": ["libs/cart/data-access/src/index.ts"],
      "@cart/cart/feature": ["libs/cart/feature/src/index.ts"],
      "@cart/checkout/data-access": ["libs/checkout/data-access/src/index.ts"],
      "@cart/home/feature": ["libs/home/feature/src/index.ts"],
      "@cart/libs/checkout/feature": ["libs/checkout/feature/src/index.ts"],
      "@cart/products/data-access": ["libs/products/data-access/src/index.ts"],
      "@cart/products/feature": ["libs/products/feature/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
